@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div style="background-color:lightgray">
    <header class="text-center">
    <h1 style="font-weight:300">Welcome To Razor Pages</h1>
    <h2>by @Model.FullName</h2>
    </header>
    <br/><br/>
<form method="post" class="mx-auto" style="width:90%">
    <p class="mb-3">
        <label for="name" class="form-label">Name</label>
            <input type="text" required="true" class="form-control" asp-for="FullName">
    </p>
    <p class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" required="" class="form-control" name="email">
    </p>
    <p class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" required class="form-control" name="password">
        <div id="passwordHelp" style="color:black" class="form-text">We'll never share your password with anyone else.</div>
    </p>
    <div>
    <p class="mb-3">
        <button type="submit" style="border:solid" class="btn btn primary">
            Register
        </button>
    </p>
    </div>
    <p  class="mb-3">
        @ViewData["Message"]
    </p>
</form>
</div>


